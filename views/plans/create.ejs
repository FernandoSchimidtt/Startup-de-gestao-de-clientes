<%- include('../partials/header.ejs')%>
    <%- include('../partials/homenavbar.ejs')%>

        <body>
            <div class="container">
                <h2 class="mt-5">Criação de um novo plano</h2>
                <hr>
                <form action="/plans/store" method="POST">
                    <div class="card">
                        <div class="card-header">
                            <h4>Novo Plano</h4>
                        </div>

                        <div class="card-body">
                            <input type="text" name="title" class="form-control" id="title" placeholder="Titulo do plano"><br>
                            <input type="number" name="list" class="form-control" id="list" placeholder="Numero de listas"><br>
                            <input type="number" name="client" class="form-control" id="client" placeholder="Numero de clientes"><br>
                            <input type="number" name="value" class="form-control" id="value" placeholder="Custo"><br>
                            <hr> Permite importação de lista: <input type="checkbox" name="imports" id="imports">
                        </div>
                        <div class="card-footer">
                            <button class="btn btn-success btn-block">Cadastrar</button>
                        </div>
                    </div>
                </form>
            </div>
        </body>
        <%- include('../partials/footer.ejs')%>